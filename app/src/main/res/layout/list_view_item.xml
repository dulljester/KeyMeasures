<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="false"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/glossWhite"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/visionImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textViewHours"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="image"
        app:srcCompat="@color/gold"
        />

    <TextView
        android:id="@+id/textViewHours"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.30"
        android:layout_height="match_parent"
        android:text="Hours"
        android:textColor="@color/matteBlack"
        android:background="@color/glossWhite"
        android:textSize="@dimen/listEntryFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/visionImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:paddingLeft="@dimen/entryLeftPadding"
        android:paddingTop="@dimen/entryVerticalPadding"
        android:paddingBottom="@dimen/entryVerticalPadding"
        android:paddingRight="@dimen/entryLeftPadding"
        />

    <TextView
        android:id="@+id/textViewDirectionName"
        android:background="@color/glossWhite"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.50"
        android:layout_height="match_parent"
        android:textSize="@dimen/listEntryFontSize"
        android:text="Direction"
        android:textColor="@color/matteBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textViewHours"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/entryLeftPadding"
        android:paddingTop="@dimen/entryVerticalPadding"
        android:paddingRight="@dimen/entryLeftPadding"
        android:paddingBottom="5dip"
        />
</android.support.constraint.ConstraintLayout>